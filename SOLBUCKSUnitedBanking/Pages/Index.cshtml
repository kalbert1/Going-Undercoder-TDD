@page
@model IndexModel
@{
    ViewData["Title"] = "SOLBANK United Banking";
}



<div class="row">
    <div class="col-md-12">
        <br /><br /><br />
        <p>
            <h2>Where Soltechies Come To Bank</h2>
        </p>
        <p style="line-height:2">
            Welcome to SOLBUCKS United's banking platform. This platform allows Soltechies to view account balances, deposit,
            withdraw and transfer SOLTECH Bucks. Please be advised that SOLBUCKS United is not FDIC insured and is not liable
            for any loss or damage of SOLTECH Bucks. Please click the login or register links in the top right corner to start
            your SOLBUCKS United banking experience.
        </p>
        <p>
            If you have any questions or concerns, please contact Sarah Lodato at
            <br />
            <a href="mailto:sarah.lodato@soltech.net">Sarah.Lodato@soltech.net</a>
        </p>
    </div>
</div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="height:210px" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" style="height:210px" role="listbox">
            <div class="item active">
                <img src="~/images/banner1.jpg" class="img-responsive" />
                <div class="carousel-caption" style="top:50px" role="option">
                    <p>
                        Blue skys and hassle-free banking are just a click away!
                        
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/banner2.jpg" class="img-responsive" />
                <div class="carousel-caption" style="top:50px" role="option">
                    <p>
                        You know you're in good hands when banking with SOLBANK United.
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/banner3.jpg" class="img-responsive" />
                <div class="carousel-caption" style="top:50px" role="option">
                    <p>
                        Banking with a name you can trust!
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/banner4.jpg" alt="Microsoft Azure" class="img-responsive" />
                <div class="carousel-caption" style="top:50px" role="option">
                    <p>
                        Reach your financial goals with the help of SOLBANK United.
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
</div>
