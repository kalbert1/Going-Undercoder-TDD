@page
@model TransferModel
@{
    ViewData["Title"] = "Transfer";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-12">
        <section>
            <form method="post">
                <h4>Hello @Model.FirstName @Model.LastName! Please Select amounts to transfer into other account(s)</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                @for (int i = 0; i < Model.Accounts.Count; i++)
                {
                    <div class="panel panel-default">
                        <div class="panel-group">
                            <div class="panel-heading">
                                <h4>@Model.Accounts[i].AccountNumber</h4>
                            </div>
                            <div class="panel-body">
                                <input type="hidden" asp-for="Accounts[i].AccountId" />
                                <label class="col-sm-3 control-label">Amount To Transfer: </label>
                                <div class="col-sm-9">
                                    <input asp-for="Accounts[i].Amount" class="form-control" style="width: 20%" />
                                </div>
                                <span asp-validation-for="Accounts[i].Amount" class="text-danger"></span>
                                <label class="col-sm-3 control-label">Account To Transfer To: </label>
                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.Accounts[i].AccountIdForTransferId, Model.Accounts[i].AccountsForTransfer, "--Select--", new { @class = "form-control"})
                                </div>
                                <span asp-validation-for="Accounts[i].AccountIdForTransferId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br /><br />
                }
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Transfer</button>
                </div>
            </form>
        </section>
    </div>
</div>
